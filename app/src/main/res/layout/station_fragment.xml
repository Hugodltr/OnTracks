<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="stationViewModel"
            type="com.epf.ontracks.station.StationViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".station.StationFragment">

        <TextView
            android:id="@+id/station_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toTopOf="@+id/direction_text"
            app:layout_constraintEnd_toStartOf="@+id/switch_direction_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/switch_direction_button"
            tools:text="Chateau de Vincenne" />

        <TextView
            android:id="@+id/direction_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:text="@{stationViewModel.way.toString()}"
            app:layout_constraintBottom_toBottomOf="@+id/switch_favorite_button"
            app:layout_constraintEnd_toEndOf="@+id/station_name"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/station_name"
            app:layout_constraintTop_toBottomOf="@+id/station_name"
            tools:text="A" />

        <Button
            android:id="@+id/switch_direction_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:onClick="@{() -> stationViewModel.switchDirection()}"
            android:text="@string/switch_direction_button_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/switch_favorite_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/switch_direction_button"
            app:layout_constraintStart_toStartOf="@+id/switch_direction_button"
            app:layout_constraintTop_toBottomOf="@+id/switch_direction_button"
            tools:text="Add to favorite"
            android:onClick="@{() -> stationViewModel.switchFavorite()}"
            android:text="@{stationViewModel.favButton}"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/schedules_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/direction_text" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>